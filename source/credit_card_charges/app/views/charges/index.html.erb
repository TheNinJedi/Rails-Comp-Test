<div>
  <h1>Failed Charges</h1>
  <table class="table table-bordered table-hover">
    <thead>
      <tr style="background-color:#FF0000">
        <th>Name</th>
        <th>Amount</th>
        <th>Date Failed</th>
      </tr>
    </thead>

    <tbody>
      <% @failed_charges.each do |charge| %>
        <tr style="background-color:#FF0000">
          <td><%= charge.customer.full_name %></td>
          <td><%= "$#{charge.amount/100}" %></td>
          <td><%= charge.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <h1>Disputed Charges</h1>
  <table class="table table-bordered table-hover">
    <thead>
      <tr style="background-color:#FF5400">
        <th>Name</th>
        <th>Amount</th>
        <th>Date Failed</th>
      </tr>
    </thead>

    <tbody>
      <% @disputed_charges.each do |charge| %>
        <tr style="background-color:#FF5400">
          <td><%= charge.customer.full_name %></td>
          <td><%= "$#{charge.amount/100}" %></td>
          <td><%= charge.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <h1>Successful Charges</h1>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Paid</th>
        <th>Amount</th>
        <th>Currency</th>
      </tr>
    </thead>

    <tbody>
      <% @successful_charges.each do |charge| %>
        <tr>
          <td><%= charge.customer.full_name %></td>
          <td><%= charge.paid %></td>
          <td><%= "$#{charge.amount/100}" %></td>
          <td><%= charge.currency %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>